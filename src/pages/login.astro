---
import Layout from "~/layouts/Layout.astro";
import GitHubButton from "~/components/GitHubButton";
import GoogleButton from "~/components/GoogleButton";
---
<Layout title="Sign In">
  <div class="card w-full max-w-md bg-base-100 shadow-xl mx-auto">
    <div class="card-body">
      <h2 class="card-title text-2xl justify-center mb-8">Sign In</h2>

      <h3 class="text-center text-sm text-base-content/60 mb-4">
        Sign in with one of the following providers:
      </h3>

      <div class="flex flex-col gap-4">
        <GitHubButton client:load />
        <GoogleButton client:load />
      </div>

      <div class="divider">or</div>

      <p class="text-center text-sm text-base-content/60">
        Don't have an account? Create one to get started.
      </p>
    </div>
  </div>
</Layout>
