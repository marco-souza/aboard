---
import GitHubButton from "~/components/GitHubButton";
import GoogleButton from "~/components/GoogleButton";
import Layout from "~/layouts/Layout.astro";
import { routes } from "~/server/contants";

export const prerender = false;
---

<Layout title="Sign In - Aboard" showNavbar={false}>
  <div class="min-h-screen flex items-center justify-center p-4">
    <div class="card w-full max-w-lg bg-base-100/40 backdrop-blur-xl border border-white/10 shadow-2xl overflow-hidden relative group">
      <!-- Glow effect on hover -->
      <div class="absolute inset-0 bg-gradient-to-br from-primary/10 via-transparent to-secondary/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>

      <div class="card-body p-10 text-center relative z-10">
        <a href={routes.public.home} class="text-4xl font-black bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent mb-2 inline-block hover:scale-105 transition-transform cursor-pointer">
          Aboard
        </a>
        <p class="text-base-content/60 mb-8 font-medium">Welcome back, Captain.</p>

        <div class="flex flex-col gap-4 mb-4">
           <!-- Social Login Buttons need to be wrapped to maintain their internal styles or styled here -->
           <div class="hover:scale-[1.02] transition-transform duration-200">
             <GitHubButton client:load />
           </div>
           <div class="hover:scale-[1.02] transition-transform duration-200">
             <GoogleButton client:load />
           </div>
        </div>

        <div class="divider text-xs uppercase opacity-50 my-6">Or continue with magic link</div>

        <form class="flex flex-col gap-4">
            <div class="form-control">
                <input type="email" placeholder="name@company.com" class="input input-lg input-bordered bg-base-200/50 border-white/10 focus:border-primary focus:bg-base-200 focus:outline-none transition-all placeholder:text-base-content/30" />
            </div>
            <button class="btn btn-primary btn-lg shadow-lg shadow-primary/30 hover:shadow-primary/50 normal-case text-lg">
                Send Magic Link
            </button>
        </form>
        
        <p class="mt-8 text-xs text-base-content/40">
            By signing in, you agree to our <a href="#" class="link link-hover text-base-content/60">Terms</a> and <a href="#" class="link link-hover text-base-content/60">Privacy Policy</a>.
        </p>
      </div>
    </div>
  </div>
</Layout>
