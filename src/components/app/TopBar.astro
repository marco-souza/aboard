---
const title = Astro.props.title;
---
<div class="w-full flex flex-col items-center pt-8 pb-4 bg-base-100">
  <div class="absolute top-6 left-6 flex gap-2">
     <button class="btn btn-circle btn-ghost">
        <!-- Globe Icon -->
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="2" x2="22" y1="12" y2="12"/><path d="m12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>
     </button>
  </div>

  <!-- logo with title and keyboard shortcut -->
  <div class="flex items-center gap-2 mb-4">
    <div class="w-8 h-8 rounded bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center text-white font-bold shadow-sm">
      F
    </div>
    <h1 class="text-3xl font-bold text-base-content tracking-tight">{title}</h1>

      <span class="kbd kbd-sm text-xs">Alt</span>
      <span class="kbd kbd-sm text-xs">A</span>

    <button class="btn btn-ghost btn-xs btn-square opacity-50 hover:opacity-100">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m6 9 6 6 6-6"/></svg>
    </button>
  </div>
  
  <div class="relative group w-full max-w-md mt-8">
    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-base-content/40">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
    </div>
    <input 
      type="text" 
      placeholder="Filter these cards... [F]" 
      class="input input-bordered w-full pl-10 rounded-full bg-base-100 border-base-200 focus:border-primary focus:ring-0 shadow-sm text-sm transition-all hover:border-base-300" 
    />
    <div class="absolute inset-y-0 right-0 pr-2 flex items-center pointer-events-none text-base-content/40">
      <span class="kbd kbd-sm text-xs">F<span>
    </div>
  </div>

  <div class="absolute top-6 right-6 flex gap-2">
     <button class="btn btn-circle btn-ghost">
        <!-- Settings Icon -->
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.38a2 2 0 0 0-.73-2.73l-.15-.1a2 2 0 0 1-1-1.72v-.51a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/><circle cx="12" cy="12" r="3"/></svg>
     </button>
  </div>
</div>
